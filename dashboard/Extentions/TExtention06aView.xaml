<Ctrls:TWindow x:Class="HIO.Extentions.TExtention06aView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:Ctrls="clr-namespace:HIO.Controls"
        xmlns:local="clr-namespace:HIO.Extentions"
               AllowShowMaximizeRestore="False"
               AllowShowMinimize="False"
               ResizeMode="NoResize"
               ShowInTaskbar="False"
               ShowActivated="True"
               Topmost="True"
        mc:Ignorable="d"
        Title="Press Key" 
               Height="250" 
               Width="450">
    <TextBlock VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Foreground="{StaticResource HIODarkFont}"
               FontSize="12"
               TextWrapping="Wrap"
               Margin="0,0,0,13"
               Text="Please double-tap/press the HIO key to continue!"/>
</Ctrls:TWindow>
