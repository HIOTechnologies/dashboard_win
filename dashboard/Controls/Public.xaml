<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HIO.Controls">
    <SolidColorBrush x:Key="HIODarkFont" Color="#FF666666"/>
    <SolidColorBrush x:Key="HIOBrightFont" Color="#FFA9A9A9"/>
    <SolidColorBrush x:Key="HIOLineBright" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="HIOContextMenu" Color="#FF999999"/>
    <SolidColorBrush x:Key="HIOBorderTextBox" Color="#FFDCDCDC"/>
    <SolidColorBrush x:Key="HIOLineDark" Color="#FFDCDCDC"/>
    <SolidColorBrush x:Key="HIOGigari" Color="#FF93b9c2"/>
    <SolidColorBrush x:Key="HIOTextBoxForeground" Color="#FFA5A5A5"/>

    <!--<Style x:Key="HIOWindowTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource HIODarkFont}"/>
    </Style>-->
    <Style x:Key="HIOWindowTitle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource HIODarkFont}"/>
    </Style>
</ResourceDictionary>